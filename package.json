{
  "name": "claude-rio",
  "version": "2.0.0",
  "description": "Make Claude Code suggest the right skills and agents at the right time - automatically activate your custom workflows when they're most relevant",
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "cli",
    "ai",
    "skills",
    "automation"
  ],
  "homepage": "https://github.com/alex-popov-tech/claude-rio#readme",
  "bugs": {
    "url": "https://github.com/alex-popov-tech/claude-rio/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-popov-tech/claude-rio.git"
  },
  "license": "MIT",
  "author": "Oleksandr Popov <alex.popov.tech@gmail.com>",
  "main": "cli/index.js",
  "bin": {
    "claude-rio": "./cli/index.js"
  },
  "files": [
    "cli/",
    "hooks/",
    "shared/",
    "matchers/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run test:haiku && npm run test:docker",
    "test:haiku": "node tests/haiku-visual/run.js",
    "test:haiku:dry": "node tests/haiku-visual/run.js --dry-run",
    "test:docker": "bash tests/docker/run-all.sh",
    "dev": "node cli/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,json}'",
    "format:check": "prettier --check '**/*.{js,json}'",
    "prepublishOnly": "npm run lint && npm run format:check"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  }
}
